<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Common.LoginSignup.viewProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_request_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/general_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/muli_black"
            android:text="Profile"
            android:padding="8dp"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLightGrey"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_light"
                android:text="Full name"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/viewprof_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:fontFamily="@font/muli_light"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:background="@color/colorLightGrey"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:padding="5dp"
                android:fontFamily="@font/muli_light"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:fontFamily="@font/muli_light"
                android:id="@+id/viewprof_email"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="5dp"
                android:background="@color/colorLightGrey"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_light"
                android:text="Province"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/viewprof_prov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:fontFamily="@font/muli_light"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="5dp"
                android:background="@color/colorLightGrey"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_light"
                android:text="Mobile Number"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/viewprof_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:fontFamily="@font/muli_light"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="5dp"
                android:background="@color/colorLightGrey"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Of Birth"
                android:padding="5dp"
                android:fontFamily="@font/muli_light"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/viewprof_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:fontFamily="@font/muli_light"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="5dp"
                android:background="@color/colorLightGrey"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>









        </LinearLayout>


    </LinearLayout>



</ScrollView>

