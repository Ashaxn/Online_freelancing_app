<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_A_Gig"
    android:background="@drawable/bg3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_header"
                android:text="@string/welcome"
                android:textSize="32sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>


            <TextView
                android:layout_below="@+id/lbl_sub_header"
                android:text="@string/createyourgig"
                android:layout_marginTop="38dp"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UnknownId">
            </TextView>






        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="20dp"
            app:cardCornerRadius="32dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="60dp"
            app:cardBackgroundColor="@color/cardview_light_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:civ_border_color="@color/card1"
                    app:civ_border_width="1dp"
                    android:src="@drawable/freelancer"
                    android:id="@+id/img_cover">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addimg"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="0dp">

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/topicfirstin_viewgigforuser"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_title"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/gigtitle"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"

                    android:background="@drawable/custom_input"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/topic2"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_category"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/gigcategory"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/custom_input"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/topic3"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:hint="@string/gigdes"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/custom_input" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/topic4"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_delivery_info"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:hint="@string/deliveryinfo"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/custom_input" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sub Total"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_advance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Sub Total"
                    android:inputType="numberDecimal"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/custom_input" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Service Charge"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_second_amount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Service Charge"
                    android:inputType="numberDecimal"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/custom_input" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/contact"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/condetails"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/custom_input" />
                <Button
                    android:background="@drawable/custom_button"
                    android:id="@+id/btn_save"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addthisgig">

                </Button>



            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>