<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersToBeRecHome"
    android:padding="30dp"
    android:background="@drawable/vectorordersback">


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBackOrdersToMeHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/general_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/muli_black"
            android:text="Orders To Be Received"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your Processing Orders"
            android:textColor="@color/colorAccent"
            android:textSize="10sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/homeOrdersToBeRecProcessing"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            >

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="PROCESSING ORDERS"/>

                <TextView
                    android:id="@+id/OrdersToBeRecProcessingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="@color/colorAccent"
                    android:text="10 Orders"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            >

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="RECEIVED ORDERS"/>

                <TextView
                    android:id="@+id/OrdersToBeRecCompletedCount"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="10 Orders"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>